<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.OziCompose" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ozi_compose_splash_center_icon</item>
        <!-- Required for animated icons. -->
<!--        <item name="windowSplashScreenAnimationDuration">200</item>-->

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.OziCompose</item>
    </style>

</resources>


